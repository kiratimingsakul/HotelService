<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fes"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.hotelservice.update.Update_data">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#daffffff">

        <TextView
            android:id="@+id/text_Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="แก้ไขข้อมูล"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/add_image2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/text_Update"
            android:src="@drawable/ic_photo_library_black_24dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_image2">

            <include layout="@layout/custom_update" />
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>
